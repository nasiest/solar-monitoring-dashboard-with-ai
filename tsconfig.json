{
  "compilerOptions": {
    // ✅ Modern, ESM-friendly config but works cleanly with Next.js
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,

    // ✅ Type declarations
    "types": ["next", "react"],
    "sourceMap": true,
    "skipLibCheck": true,
    "noEmit": true,

    // ✅ Strict type safety
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // ✅ Quality of life
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "incremental": true,

    // ✅ Libraries and plugins
    "lib": ["dom", "dom.iterable", "esnext"],
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.jsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
